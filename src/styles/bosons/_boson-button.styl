$boson-button
  position: relative
  padding: .5em 1em
  background-color: transparent
  font-size: 1em
  text-transform: uppercase
  letter-spacing: .13em
  color: $boson-button
  border-style: solid
  border-width:  2px
  background-color: transparent
  cursor: pointer 
  
/**
  Mixins
**/  
button-hover(color = $white)
  color: invert( color )
 
$boson-button-hover
  button-hover $black
  
$boson-button-dark-hover
  button-hover $white

$boson-button-disabled
  opacity: .5
  cursor: default